@model BlogCore.Models.Categoria
@{
    ViewData["Title"] = "Crear Categoria";
}
<div class="container">
    <main>
        <div class="col-md-12 mt-4">
            <h4 h4 class="mb-3">Crear Categoria</h4>
            <form class="row g-3" asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-8">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control border border-secondary" placeholder="Nombre de la categoria" required />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Orden" class="form-label"></label>
                    <input asp-for="Orden" class="form-control border border-secondary" required />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>
                <partial name="_VistaCrearVolver" />
            </form>
        </div>
    </main>
</div>