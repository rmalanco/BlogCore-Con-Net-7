@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="border rounded bg-light p-4">
        <div class="row">
            <div class="col-8">
                <h2 class="text-primary">Lista de Usuarios</h2>
            </div>
            <div class="col-4 d-flex justify-content-end align-items-center">
                <a asp-area="Identity" class="btn btn-info text-white" asp-page="/Account/Register">
                    <i class="fas fa-plus"></i> Registrar nuevo usuario
                </a>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-12">
                @if (Model.Count() > 0)
                {
                    <table id="tblUsuarios" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%" aria-describedby="tblUsuarios">
                        <thead class="thead-dark">
                            <tr>
                                <th>Nombre</th>
                                <th>Correo</th>
                                <th>Teléfono</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.UserName</td>
                                    <td>@user.Email</td>
                                    <td>@user.PhoneNumber</td>
                                    <td>
                                        @if (user.LockoutEnd != null && user.LockoutEnd > DateTime.Now) // Si el usuario está bloqueado
                                        {
                                            <a asp-action="Desbloquear" asp-route-id="@user.Id" class="btn btn-success text-white">
                                                <i class="fas fa-unlock"></i> Desbloquear
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-action="Bloquear" asp-route-id="@user.Id" class="btn btn-danger text-white">
                                                <i class="fas fa-lock"></i> Bloquear
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        No hay usuarios registrados
                    </div>
                }
        </div>
    </div>
</div>
