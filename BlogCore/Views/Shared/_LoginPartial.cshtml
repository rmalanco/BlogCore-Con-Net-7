@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@using BlogCore.Helpers

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link @(NavigationHelper.IsActivePage("Identity", "/Account/Manage/Index", ViewContext) ? "active" : "")" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hola @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-light">Cerrar sesión</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link @(NavigationHelper.IsActivePage("Identity", "/Account/Register", ViewContext) ? "active" : "")" asp-area="Identity" asp-page="/Account/Register">Registrar</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(NavigationHelper.IsActivePage("Identity", "/Account/Login", ViewContext) ? "active" : "")" asp-area="Identity" asp-page="/Account/Login">Iniciar sesión</a>
    </li>
}
</ul>